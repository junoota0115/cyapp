<%= render 'shared/header' %>

<h1>商品詳細ページ</h1>

<% if @product.image.attached? %>
  <th><%= image_tag @product.image %>
  <% else %>
  <th><%= image_tag  'no_image' %>
  <% end %>
<hr>

<div class="show-list">
<ul>
<li class="show-list1">
 商品名：<br>
<%= @product.product_name %>
</li><br>

<li class="show-list2">
価格：<br>
<%= @product.price %>
</li><br>


<li class="show-list3">
個数：<br>
<%= @product.stock %>
</li><br>

<li class="show-list4">
説明：<br>
<%= @product.comment %>
</li>
</ul>
</div>


<hr>
<div class="show-link">
<%= link_to '編集', edit_product_path(@product) %>
<%= link_to '削除', product_path(@product), method: :delete, data: {confirm: "削除しますか？"}%>
</div>