<h1>商品一覧</h1>

<table>
<tr>
  <th>id</th>
  <th>商品名</th>
  <th>価格</th>
  <th>個数</th>
  <th>商品説明</th>
  <th>商品詳細</th>
<tr>

<% @products.each do |product|  %>

<tr>
  <th><%= product.id %></th>
  <th><%= product.product_name %></th>
  <th><%= product.price %>円</th>
  <th><%= product.stock %>個</th>
  <th><%= product.comment %></th>
  <th><%= link_to 'show', product_path(product)%></th>
<tr>
<% end %>

</table>