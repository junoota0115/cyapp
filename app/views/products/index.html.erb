<body>
<%= render 'shared/header' %>

<h1>商品一覧</h1>
<%= render 'shared/search' %>
<table>
<tr>
  <th>id</th>
  <th>商品名</th>
  <th>価格</th>
  <%# <th>個数</th>
  <th>商品説明</th>
  <th>商品詳細</th> %>
<tr>

<% @products.each do |product|  %>

<tr>
  <th><%= product.id %></th>
  <th><%=  link_to product.product_name,  product_path(product) %></th>
  <th><%= product.price %>円</th>
<!--  <th><%= product.stock %>個</th>
  <th><%= product.comment %></th>
  <th><%= link_to '詳細', product_path(product)%></th>  -->
  <% if product.image.attached? %>
  <th><%= image_tag product.image.variant(resize: '100x100') %>
  <% else %>
  <th><%= image_tag 'no_image' %>
<tr>
<% end %>
<% end %>

</table>
<%= paginate(@products)%>
<%= page_entries_info(@products)%>
</body>